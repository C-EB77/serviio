<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://github.com/sndsolutions/serviio/serviio.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>Media Servers</Category>
  <Name>serviio</Name>
  <Description>
    [b][u][span style='color: #E80000;']Description[/span][/u][/b][br]
    This is a docker for serviio.
  </Description>
  <Overview>
    This is a docker for serviio.
  </Overview>
  <Support>http://lime-technology.com/forum/index.php?topic=55549.0</Support>
  <Registry>https://registry.hub.docker.com/r/sndsolutions/serviio/</Registry>
  <GitHub>https://github.com/sndsolutions/serviio</GitHub>
  <Repository>sndsolutions/serviio</Repository>
  <Project>https://github.com/sndsolutions/serviio</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>host</Mode>
    <Publish>
      <Port>
        <HostPort>1900</HostPort>
        <ContainerPort>1900</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>8895</HostPort>
        <ContainerPort>8895</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>23423</HostPort>
        <ContainerPort>23423</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>23424</HostPort>
        <ContainerPort>23424</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>23523</HostPort>
        <ContainerPort>23523</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>23524</HostPort>
        <ContainerPort>23524</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>UMASK</Name>
      <Value>000</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/serviio</HostDir>
      <ContainerDir>/opt/serviio/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/serviio/library</HostDir>
      <ContainerDir>/opt/serviio/library</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/serviio/plugins</HostDir>
      <ContainerDir>/opt/serviio/plugins</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/serviio/log</HostDir>
      <ContainerDir>/opt/serviio/log</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/transcode</HostDir>
      <ContainerDir>/opt/serviio/transcode</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:23423]/console</WebUI>
  <Icon>https://cdn.icon-icons.com/icons2/1381/PNG/512/serviio_93579.png</Icon>
</Containers>